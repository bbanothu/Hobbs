{
  "manifest_version": 3,
  "name": "Hobbs Shopping Assistant",
  "version": "1.0.0",
  "description": "Automatically add products to cart based on natural language requests",
  "permissions": ["activeTab", "storage", "scripting", "tabs", "sidePanel"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hobbs Shopping Assistant",
    "default_icon": {
      "16": "favico.png",
      "32": "favico.png",
      "48": "favico.png",
      "128": "favico.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "favico.png",
    "32": "favico.png",
    "48": "favico.png",
    "128": "favico.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
